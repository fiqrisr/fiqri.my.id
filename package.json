{
	"name": "fiqri.my.id",
	"version": "1.0.0",
	"description": "Fiqri Syah Redha's website",
	"main": "index.js",
	"scripts": {
		"clean": "rimraf _site",
		"watch:css": "yarn tailwindcss -i ./src/styles/main.css -o ./_site/styles.css -w",
		"dev": "concurrently \"ELEVENTY_ENV=development eleventy --serve\"  \"yarn watch:css\"",
		"build:css": "postcss src/styles/main.css > _site/styles.css",
		"build": "yarn clean && ELEVENTY_ENV=production eleventy && yarn build:css"
	},
	"keywords": [],
	"author": "Fiqri Syah Redha",
	"license": "ISC",
	"devDependencies": {
		"@11ty/eleventy": "^0.12.1",
		"autoprefixer": "^10.3.1",
		"concurrently": "^6.2.1",
		"cssnano": "^5.0.7",
		"eleventy-plugin-lazyimages": "^2.1.0",
		"eleventy-plugin-seo": "^0.5.2",
		"postcss": "^8.3.6",
		"postcss-cli": "^8.3.1",
		"postcss-import": "^14.0.2",
		"rimraf": "^3.0.2",
		"tailwindcss": "^2.2.7"
	}
}
